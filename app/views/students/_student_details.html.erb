<%= content_tag(:span, raw("&nbsp"), class: "pull-right label label-#{student_house_label_class(student)}")  %>
<dl class="dl-horizontal">
  <% [:roll_number, :name, :fathers_name, :email, :gender, :dob, :phone, :address].each do |property| %>
  <dt><%= property.to_s.gsub("_"," ").capitalize %></dt>
  <dd>
    <% if property == :gender %>
      <%= Student::Gender.label(student.gender) %>
    <% elsif property == :dob %>
      <%= student.dob.strftime("%B %-d, %Y") %>
    <% else %>
      <%= student.send(property) %>
    <% end %>
  </dd>
  <% end %>
</dl>

<%= link_to "Show Marks", exams_path(student_id: student.id),id: "student_marks_link", class: "pull-right btn btn-primary", remote: true %>
